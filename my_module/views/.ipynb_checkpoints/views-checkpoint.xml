<?xml version="1.0" encoding="utf-8"?>
    <odoo>
      <data>
        <record model="ir.ui.view" id="view_employee_form_inherited">
          <field name="name">Employees</field>
          <field name="model">hr.employee</field>
          <field name="inherit_id" ref="hr.view_employee_form"/>
          <field name="arch" type="xml">
            <xpath expr="//form/header" position="before">
               <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
        attrs="{'invisible': ['|',('state', '!=', 'canceled'),('id', '=', 0)]}">
            Add this Fields to complete Employee Data: 
            <bold>
           <a class="alert-link" role="button">
               <field name="msg" readonly="True" />
           </a>
                </bold>
            </div>
            </xpath>
            <xpath expr="//sheet/div[@class='oe_button_box']" position="after">
                <widget name="web_ribbon" title="Canceled"
                        attrs="{'invisible': ['|',('state', '!=', 'canceled'),('id', '=', 0)]}" bg_color="bg-danger"/>
                <widget name="web_ribbon" title="Confirmed"
                        attrs="{'invisible': ['|',('state', '!=', 'confirmed'),('id', '=', 0)]}" bg_color="bg-info"/>
                <field name="state" invisible="1"/>
            </xpath>
        <xpath expr="//field[@name='country_of_birth']" position="after">
          <field name="honesty"/>
          <field name="constraint" />
          <field name="color_of_face" />
          <field name="color_of_eyes" />
          <field name="specail_marks" />
          <field name="delivery_date" />
          <field name="card_number" />
        </xpath>
        <xpath expr="//page/group/group[2]" position="before">
          <group string='Name'>
          <field name="first_name" required="1"/>
          <field name="father_name" required="1"/>
          <field name="nickname" required="1" />
          <field name="mother_name" />
          </group>
        </xpath>
        <xpath expr="//field[@name='name']" position="replace">
         <field name="name" placeholder="Employee's Name" required="False" readonly="1"/>
        </xpath>
          </field>
        </record>

<!-- add two filters for employee with data completed or not -->
      <record model="ir.ui.view" id="view_employee_search_inherited">
          <field name="name">Employees</field>
          <field name="model">hr.employee</field>
          <field name="inherit_id" ref="hr.view_employee_filter"/>
          <field name="arch" type="xml">
        <xpath expr="//filter[@name='message_needaction']" position="after">
         <filter string="confirmed" name="state"
                        domain="[('state', '=', 'confirmed')]"/>
          <filter string="canceled" name="state"
                        domain="[('state', '=', 'canceled')]"/>
        </xpath>
          </field>
        </record>
<!-- add employee data state in kanban view -->
    <record model="ir.ui.view" id="view_employee_kanban_inherited">
          <field name="name">Employees</field>
          <field name="model">hr.employee</field>
          <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
          <field name="arch" type="xml">
              <xpath expr="//kanban//div[@class='oe_kanban_content']" position="inside">
                  <div class="oe_kanban_bottom_left">
                  <field name="state" widget="badge" decoration-danger="state == 'canceled'" decoration-success="state == 'confirmed'"/>
                  </div>
              </xpath>
          </field>
      </record>
<!-- add state to tree view -->
    <record model="ir.ui.view" id="view_employee_tree_inherited">
          <field name="name">Employees</field>
          <field name="model">hr.employee</field>
          <field name="inherit_id" ref="hr.view_employee_tree"/>
          <field name="arch" type="xml">
          <xpath expr="//tree" position="inside">
            <field name="state" widget="badge" decoration-danger="state == 'canceled'" decoration-success="state == 'confirmed'"/>
          </xpath>
          </field>
    </record>
      </data>
    </odoo>
