<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- tree view for empoyee standard fields -->
    <record id="arados_emp_standard_tree" model="ir.ui.view">
      <field name="name">Employee standards</field>
      <field name="model">arados.hr.standards</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="model_id"/>
            <field name="field_ids" widget="many2many_tags" string="Standard Fields"/>
        </tree>
      </field>
    </record>
<!-- form view for employee standard fields -->
    <record  id="arados_emp_standard_form" model="ir.ui.view">
      <field name="name">Employee standards</field>
      <field name="model">arados.hr.standards</field>
      <field name="arch" type="xml">
      <form>
        <sheet>
            <group>
                <field name="id" invisible="1"/>
                <field name="name"/>
                <field name="model_id" attrs="{'readonly':[('id','>',0)]}" options="{'no_create': True, 'no_create_edit':True}"/>
                <field name="field_ids" domain="[('model_id', '=',model_id)]" 
                            widget="many2many_tags" string="Standard Fields" options="{'no_create': True, 'no_create_edit':True}"/>
            </group>
        </sheet>
       </form>
       </field> 
    </record>

<!-- default view///// menu item action -->
      <record id='arados_emp_standard_action' model='ir.actions.act_window'>
        <field name="name">Employee Standards</field>
        <field name="res_model">arados.hr.standards</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
          </p>
        </field>
    </record>
<!-- menu item for employee standard fields.. in configuration menu item -->
<menuitem
    id="arados_emp_standards"
    name="standard fields"
    parent="hr.menu_human_resources_configuration"
    action="arados_emp_standard_action"/>
</odoo>
